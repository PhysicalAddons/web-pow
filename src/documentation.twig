{% set documentation = [
    {
        'name': 'Mesh',
        'icon': 'icons/blender-icons/light_sun.svg',
        'parameters': [
            {
                'name': 'Size',
                'excerpt': 'Description.',
                'description': 'But longer.'
            },
        ]
    },
   
]%}

